###
 # gmx specific options
 ###

 color status cyan default

 set from      = "pankajm@cse.iitk.ac.in"
 set sendmail  = "/usr/bin/msmtp -a cse"
 set mbox      = "+cse/Archive"
 set record    = "+cse/Sent"
 set postponed = "+cse/Drafts"

 macro index E "<change-folder>+cse/Archive<enter><limit>~B " "search everything"
 macro index D "<save-message>+cse/Trash<enter>"              "move message to the trash"
 macro index S "<save-message>+cse/Spam<enter>"               "mark message as spam"
